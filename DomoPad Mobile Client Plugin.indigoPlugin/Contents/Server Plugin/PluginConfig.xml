<?xml version="1.0"?>
<PluginConfig>
	<Field id="pluginTitleLabel" type="label" fontSize="large">
		<Label>Domotics Pad Google Client</Label>
	</Field>
	<Field id="pluginAuthorLabel" type="label" fontSize="small">
        <Label>Developed by RogueProeliator</Label>
    </Field>
	<Field id="pluginDescriptionLabel" type="label" fontSize="small" fontColor="darkGray">
        <Label>Provides advanced interactions when used with the Domotics Pad Android Client and allows control of Indigo-connected devices via Google Home / Assistant.</Label>
    </Field>

	<Field type="label" id="publishSpacer" fontSize="small">
		<Label></Label>
	</Field>
	<Field id="publishOptionsTitle" type="label" fontColor="darkGray">
		<Label>GOOGLE HOME/ASSISTANT OPTIONS</Label>
	</Field>
	<Field id="googleHomeOptionsSep" type="separator" />
	<Field type="checkbox" id="sendUpdatesToGoogle">
		<Label>Publish Updates</Label>
		<Description>Send device status updates to Google Assistant</Description>
	</Field>
	<Field type="label" id="publishUpdatesInstructions" fontSize="small">
		<Label>Publishing of updates is still controlled individually by device, but this allows a global "off" switch</Label>
	</Field>
	
	<Field type="label" id="debugSpacer" fontSize="small">
		<Label></Label>
	</Field>
	<Field id="debugOptionsTitle" type="label" fontColor="darkGray">
		<Label>DEBUGGING OPTIONS</Label>
	</Field>
	<Field id="debugSeparator2" type="separator" />
	<Field type="label" id="debugInstructions" fontSize="small">
		<Label>Enabling debugging will write lots of status and state information to the Indigo event log. This should normally be left disabled unless you are troubleshooting a problem.</Label>
	</Field>
	<Field type="menu" id="debugLevel" defaultValue="0">
		<Label>Debug Level:</Label>
		<List>
			<Option value="0">Off</Option>
			<Option value="1">Low</Option>
			<Option value="2">High</Option>
		</List>
	</Field>
</PluginConfig>